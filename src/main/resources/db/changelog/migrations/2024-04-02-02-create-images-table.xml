<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-02-26-create-images-table" author="admin">
        <createTable tableName="images">
            <column name="original_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="size_bytes" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="link" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_username" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="images"
                                 baseColumnNames="user_username"
                                 constraintName="fk_images_user_username"
                                 referencedTableName="users"
                                 referencedColumnNames="username"/>

        <createIndex tableName="images" indexName="idx_images_user_username">
            <column name="user_username"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>